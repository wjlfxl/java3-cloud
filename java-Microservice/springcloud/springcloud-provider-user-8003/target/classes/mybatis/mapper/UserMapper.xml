<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="springcloud.dao.UserDao">

    <select id="queryUserList" resultType="User">
        select * from market3.user;
    </select>

    <select id="userById" resultType="User">
        select * from market3.user where id=#{id};
    </select>

    <insert id="addUser" parameterType="User">
        insert into market3.User(id,name,password,people,phone,role)
        values (#{id},#{name},#{password},#{people},#{phone},#{role});
    </insert>

</mapper>